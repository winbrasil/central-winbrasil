<inicial>:
    #layout, janela principal ------------------ >
    FloatLayout:
        background_color: 0,0,0,0
        #size_hint:1,1
        canvas.before:
            Rectangle:
                texture: app.gradient_texture
                pos: self.pos
                size: self.size
                
    
        BoxLayout:
            #padding: dp(10)
            
            
            orientation: "vertical"
            size_hint:1, 0.3
            pos_hint: {"x": 0.0, "y":0.7}
            height: self.minimum_height
            background_color: 0,0,0,0
            
            ScrollView:
                do_scroll_y: False
                #do_scroll_x: True
                id: lay_scroll_pai
                background_color: 0,0,0,0
                

                
                BoxLayout:
                    orientation: "vertical"
                    id: lay_box_ai
                    background_color: 0,0,0,0
                    
                    size_hint: None, None
                    height: self.minimum_height
                    width: self.minimum_width
                    background_color: 0, 0, 0, 0
                    
                    Button:
                        id: btn_id
                        markup: True
                        text: ""
                        size_hint: None, None
                        height: dp(100)
                        width: root.tamanho_x_tela
                        color: 0, 0, 1, 1
                        font_size: root.fonte_padrao
                        on_release: root.alerta_do_sistema(arg="ola")
                        opacity: 0
                        background_color: 0, 0, 0, 0
                        canvas.before:
                            Color:
                                rgba: 0.5, 0, 0.2, 1
                            Ellipse:
                                texture: app.gradient_texture
                                size: self.size
                                pos: self.pos
                            Color:
                                rgba: 0.2, 0.2, 1, 1
                            Line:
                                
                                ellipse: [0, self.y, self.width, self.height, self.width, self.height]
                                cap: "square"
                                width: dp(2)
                                joint: "bevel"
                                texture: app.gradient_texture
                                close: False
                                dash_length: dp(2)
