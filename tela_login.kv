<TelaLogin>:
    canvas.before:
        #Color:
#            rgba: 1, 1, 1,1
        
        Rectangle:
            
            texture: app.criar_gradient_texture((0,0,0,1), (0,0,1,1), 200)
            
            pos: self.pos
            size: self.size


    BoxLayout:
        orientation: "vertical"
        spacing: dp(20)
        padding: dp(20)
        canvas.before:
            Rectangle:
                
                pos: self.pos
                size: self.size
                source: "icones/icon_TelaLogin/icon_tela_login.png"
                #texture: root.app.criar_gradient_texture((1,1,1,1), (0,0,0.5,1))
        
        
        BoxLayout:
            orientation: "vertical"
            size_hint: 1, None
            height: self.minimum_height
            
            
                
        BoxLayout:
            id: layout_icon_png
            orientation: "vertical"
            size_hint: 1, None
            
            height: self.minimum_height
            canvas.before:
                #Color:
#                    rgba: 0.2, 0, 0.5, 0.2
                RoundedRectangle:
                    texture: root.app.criar_gradient_texture((0,0,1,1), (0,0,0,1))
                    pos: self.pos
                    size: self.size
                    radius: [dp(50)]
            
            Button:
                background_normal: "icones/icon_TelaLogin/icon_TelaLogin.png"
                size_hint: 1,None
                height: min(dp(150), root.win.height * 0.2)
                background_color: 1, 1, 1, 1
                
        BoxLayout:
            orientation: "vertical"
            padding: dp(25)
            size_hint: 1, None
            height: self.minimum_height
            Label:
                markup: True
                text: f"[u][color=#FFA500][size={min(int(sp(70)), int(root.fonte_padrao *1.5))}]L[/size]ogin[/u][/color]\nsistema Winbrasil"
                size_hint:1, None
                font_size: min(sp(20), root.fonte_padrao//1.5)
                valign: "middle"
                halign: "center"
                font_name: "fonte/Rubik_Mono_One/RubikMonoOne-Regular.ttf"
                text_size: self.size[0], None
                
                
        MDBoxLayout:
            id:box_cxs
            orientation: "vertical"
            spacing: dp(20)
            padding: [dp(50), dp(50), dp(50) , 0]
            canvas.before:
                #Color:
#                    rgba: 0.2, 0, 1, 1
                RoundedRectangle:
                    texture: root.app.criar_gradient_texture((0,0,1,1), (0,0,0,1), 150)
                    pos: self.pos
                    size: self.size
                    radius: [dp(50)]
                    
                
            
            MDTextField:

                
                id:cx_u
                icon_left: "account"
                mode: "line"
                line_color_normal: 1,1,1,1
                line_color_focus: 1,1,1,1
                hint_text: "Insira email\n"
                #id: cx_u
                text_color: 1,1,1,1
                text_color_focus: 1,1,1,1
                text_color_normal: 1,1,1,1
                hint_text_color_normal: 1,1,1,1
                hint_text_color_focus: 1,1,1,1
                icon_left_color: 1,1,0,1
                font_size: min(sp(17), root.fonte_padrao//1.2)
                multiline: False
                size_hint: 1, 0.3  
                theme_icon_color: "Custom"
                text_icon_color: 1,1,1,1
                keyboard_suggestions: False
                use_bubble: False
                use_handles: False

                input_type:"text"
                input_filter: None
                helper_text_mode: "on_focus"
                        
            MDBoxLayout:
                orientation:"horizontal"
                spacing:dp(2)
                size_hint: 1, 0.3
            
                MDTextField:
                    id:cx_s
                    icon_left: "lock"
                    mode: "line"
                    line_color_normal: 1,1,1,1
                    line_color_focus: 1,1,1,1
                    hint_text: "Insira senha\n"
                    text_color_focus: 1,1,1,1
                    text_color_normal: 1,1,1,1
                    hint_text_color_normal: 1,1,1,1
                    hint_text_color_focus: 1,1,1,1
                    multiline: False
                    theme_icon_color: "Custom"
    
                    #size_hint: 1, 0.3
                    password: True
                    
                MDIconButton:
                    icon: "eye"
                    size_hint: None, None
                    icon_size: "30sp"
                    theme_icon_color: "Custom"
                    icon_color: 1,1,1,1
                    on_release: root.mo(self)
                

                
            MDRaisedButton:
                markup: True
                text: "[b]LOGIN"
                size_hint: 1, None
                font_size: root.fonte_padrao
                size_hint: 1, 0.2
                on_release: root.verificar_login()
                #height: min(dp(50), root.win.height * 0.1)
#layout faz parte dos widgets  textinput ----- >
            BoxLayout:
                orientation: "horizontal"
                size_hint: 1, 0.2
                padding: dp(5)
                #height: self.minimum_height
                
                
                MDLabel:
                    text:"Lembrar usu√°rio?"
                    size_hint: None, 1
                    theme_text_color: "Custom"
                    text_color: 1,1,1,1
                    halign: "right"
                    width: dp(200)
                
                
                MDCheckbox:
                    
                    text_color: 1,1,1,1
                    theme_text_color: "Custom"
                    color: 1,1,1,1
                    unselected_color: 1,1,1,1
                    #halign: "left"
                    on_active:root.acao_checkbox(self.active)
                    group: "grupo2"
                    
# < ---------------
                
        BoxLayout:
            padding: dp(20)
            
            orientation: "horizontal"
            size_hint: 1, None
            height: self.minimum_height
            canvas.before:
                Color:
                    rgba: 0.05, 0.2, 0.6, 0.2
                RoundedRectangle:
                    texture: root.app.criar_gradient_texture()
                    pos: self.pos
                    size: self.size
                    radius: [dp(40)]
            
            Label:
                text: "Esqueceu a senha?"
                size_hint: 1, None
                
            MDRaisedButton:
                markup: True
                text: "[b]Recuperar"
                size_hint:0.7, None
                height: min(dp(100), root.win.width * 0.1)